# When adding additional environment variables, also update the schema in "/src/env.js".

APP_HOST=recipes.localhost

# ---- Database ----
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=modern_recipes

# ---- NextAuth ----
# Generate for prod: `openssl rand -base64 32`
NEXTAUTH_SECRET="dev-only-change-in-prod"
NEXTAUTH_URL="http://localhost:3000"

# ---- OAuth/Kroger (placeholders) ----
KROGER_CLIENT_ID=""
KROGER_CLIENT_SECRET=""
NEXT_SKIP_ADD_TO_CART=false

# ---- OpenAI (for AI features) ----
OPENAI_API_KEY=""

# ---- Media (S3/MinIO) ----
# App S3 configuration (web-app reads these)
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_BUCKET=recipes-media
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin

TRAEFIK_MINIO_ENTRYPOINTS=web
TRAEFIK_MINIO_TLS=false

# Public media host for next/image (use your DNS/Traefik host)
NEXT_PUBLIC_MEDIA_BASE_URL=http://localhost:9000/recipes-media
