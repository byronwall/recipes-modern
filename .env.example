# When adding additional environment variables, also update the schema in "/src/env.js".

# ---- Database ----
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/modern_recipes"
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=modern_recipes

# ---- NextAuth ----
# Generate for prod: `openssl rand -base64 32`
NEXTAUTH_SECRET="dev-only-change-in-prod"
NEXTAUTH_URL="http://localhost:3000"

# ---- OAuth/Kroger (placeholders) ----
NEXT_CLIENT_ID=""
CLIENT_SECRET=""
NEXT_REDIRECT_URI="http://localhost:3000/api/callback"
NEXT_SKIP_ADD_TO_CART=false

# ---- OpenAI (for AI features) ----
OPENAI_API_KEY=""

# ---- Media (S3/MinIO) ----
# MinIO root credentials
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# App S3 configuration (web-app reads these)
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_BUCKET=recipes-media
# If running outside Docker, set explicit creds. In Docker, these map to MINIO_* above.
S3_ACCESS_KEY_ID=${MINIO_ROOT_USER}
S3_SECRET_ACCESS_KEY=${MINIO_ROOT_PASSWORD}

# Public media host for next/image (use your DNS/Traefik host)
PUBLIC_MEDIA_HOST=recipes-media.byroni.us

# Client-exposed for building image URLs
NEXT_PUBLIC_MEDIA_HOST=recipes-media.byroni.us
NEXT_PUBLIC_S3_BUCKET=recipes-media

# CORS origins for MinIO init (comma-separated)
APP_ORIGINS=http://localhost:3000,https://recipes.byroni.us
